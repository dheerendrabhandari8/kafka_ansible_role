[Unit]
Description=Apache Kafka Service
Documentation=http://kafka.apache.org/documentation.html
Requires=zookeeper.service

[Service]
Type=simple
Environment="JAVA_HOME=/usr/lib/jvm/java-1.8.0-openjdk-amd64/jre"
ExecStart=/usr/local/kafka-{{ kafka_version }}-src/bin/kafka-server-start.sh /usr/local/kafka-{{ kafka_version }}-src/config/server.properties
ExecStop=/usr/local/kafka-{{ kafka_version }}-src/bin/kafka-server-stop.sh

[Install]
WantedBy=multi-user.target

