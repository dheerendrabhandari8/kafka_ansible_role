[Unit]
Description=Apache Kafka Server
Documentation=http://kafka.apache.org/documentation.html
Requires=zookeeper.service

[Service]
Type=simple
Environment="JAVA_HOME=/usr/lib/jvm/java-1.11.0-openjdk-amd64"
ExecStart=/usr/local/kafka-3.6.0-src/bin/kafka-server-start.sh /usr/local/kafka-3.6.0-src/config/server.properties
ExecStop=/usr/local/kafka-3.6.0-src/bin/kafka-server-stop.sh

[Install]
WantedBy=multi-user.target
